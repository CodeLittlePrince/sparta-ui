  "description": "网易金融PC组件库",
  "main": "index.js",
  "scripts": {
    "mock": "nodemon -q ./server/index.js --kill-others",
    "watch": "nodemon -q --watch webpack/dev.js webpack/dev.js",
    "dev": "npm run watch",
    "analyze": "cross-env NODE_ENV=production ANALYZE=active webpack -p --progress --colors --config webpack/webpack.config.prod.js",
    "prod": "cross-env NODE_ENV=production webpack -p --progress --colors --config webpack/webpack.config.prod.js",
    "online": "cross-env NODE_ENV=production ONLINE=active webpack -p --progress --colors --config webpack/webpack.config.prod.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./site/ ./components/ --ext .vue,.js",
    "lint:css": "stylelint \"./site/**/*.(vue|scss)\" --syntax scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "codelittleprince",
  "license": "MIT",
